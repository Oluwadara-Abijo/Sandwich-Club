<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <LinearLayout
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/also_known_as_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_also_known_tv"
                style="@style/DetailLabelTheme"
                android:text="@string/detail_also_known_as_label" />

            <TextView
                android:id="@+id/also_known_tv"
                style="@style/DetailTheme"
                android:text="@string/detail_also_known_as_label" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/origin_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_origin_tv"
                style="@style/DetailLabelTheme"
                android:text="@string/detail_place_of_origin_label" />

            <TextView
                android:id="@+id/origin_tv"
                style="@style/DetailTheme"
                android:text="@string/detail_place_of_origin_label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_ingredients_tv"
                style="@style/DetailLabelTheme"
                android:text="@string/detail_ingredients_label" />

            <TextView
                android:id="@+id/ingredients_tv"
                style="@style/DetailTheme"
                android:text="@string/detail_ingredients_label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_description_tv"
                style="@style/DetailLabelTheme"
                android:text="@string/detail_description_label" />

            <TextView
                android:id="@+id/description_tv"
                style="@style/DetailTheme"
                android:text="@string/detail_description_label" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>
